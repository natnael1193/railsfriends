<%  if user_signed_in? %>
<table class="table table-hover">

  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
         <td><%= link_to 'Show', friend, class: 'btn btn-info' %></td>
         <%# <% if friend.user_id == current_user.id %> 
        <td><%= link_to 'Edit', edit_friend_path(friend), class: 'btn btn-primary' %></td>
        <td>....</td>
        <td><%= button_to 'Destroy', friend, method: :delete,  data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <%# <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class: 'btn btn-success' %>

<% else %>
<h1>Hello Friends, Please Login</h1>
<% end %>